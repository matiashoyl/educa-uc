<%- model_class = School -%>
<div class="page-header">
  <h1>Establecimientos</h1>
</div>
<table class="table table-striped" style="width:auto; margin: 0 auto;">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Director</th>
      <th>Creada en</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.director %></td>
        <td><%= school.created_at_year %></td>
        <td>
          <%= link_to "Editar",
                      edit_school_path(school), :class => 'btn btn-mini' %>
          <%= link_to "Eliminar",
                      school_path(school),
                      :method => :delete,
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Nuevo Establecimiento',
            new_school_path,
            :class => 'btn btn-primary' %>
